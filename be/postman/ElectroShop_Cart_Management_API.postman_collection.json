{
	"info": {
		"_postman_id": "electroshop-cart-management-api",
		"name": "ElectroShop Cart Management API",
		"description": "Collection for testing Cart Management APIs (User)",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Add Product to Cart",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}",
						"description": "JWT token for user authentication"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"variantId\": 1,\n  \"quantity\": 2\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/v1/user/cart",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "user", "cart"]
				},
				"description": "Add product variant to cart"
			},
			"response": []
		},
		{
			"name": "View Cart",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}",
						"description": "JWT token for user authentication"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/v1/user/cart",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "user", "cart"]
				},
				"description": "Get user's cart"
			},
			"response": []
		},
		{
			"name": "Update Cart Quantity",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}",
						"description": "JWT token for user authentication"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"quantity\": 3\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/v1/user/cart/1",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "user", "cart", "1"]
				},
				"description": "Update quantity of cart item by variant ID"
			},
			"response": []
		},
		{
			"name": "Remove Product from Cart",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}",
						"description": "JWT token for user authentication"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/v1/user/cart/1",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "user", "cart", "1"]
				},
				"description": "Remove product variant from cart"
			},
			"response": []
		},
		{
			"name": "Clear Cart",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}",
						"description": "JWT token for user authentication"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/v1/user/cart",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "user", "cart"]
				},
				"description": "Clear all items from cart"
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8080",
			"type": "string"
		},
		{
			"key": "jwt_token",
			"value": "",
			"type": "string",
			"description": "JWT token obtained from login endpoint"
		}
	]
}

