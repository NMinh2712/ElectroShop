	"item": [
		{
			"name": "Create Category",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}",
						"description": "JWT token for admin authentication"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"Laptops\",\n  \"description\": \"Laptop computers and notebooks\",\n  \"parentId\": null\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/v1/admin/category",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "admin", "category"]
				},
				"description": "Create a new category"
			},
			"response": []
		},
