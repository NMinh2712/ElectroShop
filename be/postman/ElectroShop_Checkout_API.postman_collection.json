{
	"info": {
		"_postman_id": "electroshop-checkout-api",
		"name": "ElectroShop Checkout API",
		"description": "Collection for testing Checkout API (User)",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Checkout",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}",
						"description": "JWT token for user authentication"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"shippingAddress\": \"123 Main Street, Ho Chi Minh City\",\n  \"note\": \"Please deliver in the morning\",\n  \"voucherId\": null,\n  \"paymentMethod\": \"CREDIT_CARD\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/v1/user/checkout",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "user", "checkout"]
				},
				"description": "Checkout cart items and create order"
			},
			"response": []
		},
		{
			"name": "Checkout with Voucher",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}",
						"description": "JWT token for user authentication"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"shippingAddress\": \"123 Main Street, Ho Chi Minh City\",\n  \"note\": \"Please deliver in the morning\",\n  \"voucherId\": 1,\n  \"paymentMethod\": \"BANK_TRANSFER\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/v1/user/checkout",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "user", "checkout"]
				},
				"description": "Checkout with voucher applied"
			},
			"response": []
		},
		{
			"name": "Checkout - Error: Empty Cart",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}",
						"description": "JWT token for user authentication"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"shippingAddress\": \"123 Main Street\",\n  \"paymentMethod\": \"CREDIT_CARD\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/v1/user/checkout",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "user", "checkout"]
				},
				"description": "Test error when cart is empty"
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8080",
			"type": "string"
		},
		{
			"key": "jwt_token",
			"value": "",
			"type": "string",
			"description": "JWT token obtained from login endpoint"
		}
	]
}

